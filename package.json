{
  "name": "demoman",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",

    "lint:ts": "biome lint",
    "lint:rs": "cargo clippy",
    "lint": "npm run lint:ts && npm run lint:rs",

    "format:ts": "biome format --write",
    "format:rs": "cargo fmt",
    "format": "npm run format:ts && npm run format:rs",

    "check:ts": "npm run typecheck && biome check",
    "check:rs": "cargo clippy && cargo fmt --check",
    "check": "npm run check:ts && npm run check:rs",

    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@fontsource-variable/hanken-grotesk": "^5.2.5",
    "@mantine/core": "^7.17",
    "@mantine/dates": "^7.17",
    "@mantine/form": "^7.17",
    "@mantine/hooks": "^7.17",
    "@mantine/modals": "^7.17",
    "@tabler/icons-react": "^2.47.0",
    "@tauri-apps/api": "^2.4.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.2.2",
    "@tauri-apps/plugin-dialog": "^2.2.1",
    "@tauri-apps/plugin-log": "^2.3.1",
    "@tauri-apps/plugin-opener": "^2.2.6",
    "@tauri-apps/plugin-shell": "^2.2.1",
    "@tauri-apps/plugin-updater": "^2.7.1",
    "memoize-one": "^6.0.0",
    "react": "^18.3.0",
    "react-async-hook": "^4.0.0",
    "react-dom": "^18.3.0",
    "react-router": "^7.5.2",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tauri-apps/cli": "^2.4.1",
    "@types/node": "^20.17.30",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "postcss-preset-mantine": "^1.17.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-mantine": {},
      "autoprefixer": {}
    }
